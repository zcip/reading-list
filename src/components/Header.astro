---
import LogoSvg from "../assets/images/logo.svg";

export type Props = {
  title: string;
};

const { title } = Astro.props;
---

<header
  class="mb-4 py-20 bg-gradient-to-r from-pink-300 to-blue-500 bg-clip-padding fill-transparent dark:from-pink-500 dark:to-blue-700"
>
  <div class="pt-4 flex items-center justify-center">
    <a href="/" aria-label={title} class="h-full w-full sm:max-w-4xl">
      <img
        class="w-full h-auto"
        src={LogoSvg.src}
        alt=""
        width={LogoSvg.width}
        height={LogoSvg.height}
      />
    </a>
  </div>
</header>
<style>
  :global(.dark) img {
    filter: invert(100%) sepia(1%) saturate(83%) hue-rotate(12deg)
      brightness(115%) contrast(100%);
  }
</style>
