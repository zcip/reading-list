---
const siteUrl = new URL(Astro.url.pathname, Astro.site);
---

{
  import.meta.env.DEV && (
    <div
      style={{
        position: "absolute",
        top: "10px",
        left: "10px",
        padding: "1rem 0.5rem",
        color: "red",
        background: "#666",
      }}
    >
      <a href={siteUrl} target="_blank">
        {siteUrl}
      </a>
    </div>
  )
}
