---
import "../styles/global.css";
import Head from "../components/Head.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import DevInfo from "../components/DevInfo.astro";

const pageTitle = "zcip's Reading List";

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const description = "zcipが読んだ記事をまとめます";

const ogImageSrcPath = "/images/og.jpg";
const canonicalImageSrc = new URL(ogImageSrcPath, Astro.site);
---

<html lang="ja">
  <head>
    <Head />
    <slot name="seo">
      <link rel="canonical" href={canonicalURL} />
      <title>{pageTitle}</title>
      <meta property="og:title" content={pageTitle} />
      <meta property="og:type" content="article" />
      <meta property="og:url" content={canonicalURL} />
      <meta property="og:image" content={canonicalImageSrc} />
      <meta
        name="description"
        property="og:description"
        content={description}
      />
      <meta property="og:site_name" content={pageTitle} />
    </slot>
    <meta name="Hatena::Bookmark" content="nocomment" />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body>
    <Header title={pageTitle} />
    <main class="mx-auto max-w-4xl pb-4 px-2">
      <slot />
    </main>
    <Footer />
    <DevInfo />
  </body>
</html>
